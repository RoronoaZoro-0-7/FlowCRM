generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  ADMIN
  MANAGER
  SALES
}

enum NotificationType {
  TASK_ASSIGNED
  USER_ADDED
  LEAD_ASSIGNED
  DEAL_UPDATED
  SYSTEM
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL
  WON
  LOST
}

enum ActivityType {
  NOTE
  CALL
  EMAIL
  MEETING
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  users         User[]
  leads         Lead[]
  deals         Deal[]
  events        Event[]
  audits        AuditLog[]
  tasks         Task[]
  notifications Notification[]
  @@map("organizations")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(SALES)
  createdAt DateTime @default(now())

  // 2FA fields
  twoFactorEnabled Boolean  @default(false)
  twoFactorSecret  String?

  // Each user belongs to exactly one organization
  orgId String
  org   Organization @relation(fields: [orgId], references: [id])

  // Relations
  ownedLeads     Lead[]         @relation("OwnedLeads")
  assignedLeads  Lead[]         @relation("AssignedLeads")
  assignedDeals  Deal[]         @relation("AssignedDeals")
  activities     Activity[]
  assignedTasks  Task[]         @relation("AssignedTasks")
  createdTasks   Task[]         @relation("CreatedTasks")
  notifications  Notification[]
  refreshTokens  RefreshToken[]
  auditLogs      AuditLog[]
  events         Event[]

  @@map("users")
}

model Lead {
  id      String     @id @default(uuid())
  name    String
  email   String?
  phone   String?
  company String?
  source  String?
  status  LeadStatus @default(NEW)
  value   Int        @default(0)

  orgId   String
  ownerId String
  assignedToId String?

  org        Organization @relation(fields: [orgId], references: [id])
  owner      User         @relation("OwnedLeads", fields: [ownerId], references: [id])
  assignedTo User?        @relation("AssignedLeads", fields: [assignedToId], references: [id])

  activities Activity[]
  tasks      Task[]
  deals      Deal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("leads")
}

model Deal {
  id                String    @id @default(uuid())
  name              String
  value             Int       @default(0)
  stage             String    @default("QUALIFICATION")
  expectedCloseDate DateTime?
  closeDate         DateTime?

  orgId        String
  org          Organization @relation(fields: [orgId], references: [id])

  leadId       String?
  lead         Lead?    @relation(fields: [leadId], references: [id])

  assignedToId String?
  assignedTo   User?    @relation("AssignedDeals", fields: [assignedToId], references: [id])

  tasks        Task[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt

  @@map("deals")
}

model Activity {
  id      String       @id @default(uuid())
  type    ActivityType
  content String

  leadId String
  userId String

  lead Lead @relation(fields: [leadId], references: [id])
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@map("activities")
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?

  leadId       String?
  lead         Lead?        @relation(fields: [leadId], references: [id])

  dealId       String?
  deal         Deal?        @relation(fields: [dealId], references: [id])

  assignedToId String
  assignedTo   User         @relation("AssignedTasks", fields: [assignedToId], references: [id])

  createdById  String
  createdBy    User         @relation("CreatedTasks", fields: [createdById], references: [id])

  orgId        String
  org          Organization @relation(fields: [orgId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("tasks")
}

model Notification {
  id        String   @id @default(uuid())

  title     String
  message   String
  type      NotificationType
  link      String?

  isRead    Boolean  @default(false)

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  orgId     String
  org       Organization @relation(fields: [orgId], references: [id])

  createdAt DateTime @default(now())
}

model Event {
  id      String @id @default(uuid())
  type    String
  payload Json

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  orgId String
  org   Organization @relation(fields: [orgId], references: [id])

  createdAt DateTime @default(now())

  @@map("events")
}

model AuditLog {
  id         String @id @default(uuid())
  action     String
  entityType String?
  entityId   String?
  
  changes    Json?
  ipAddress  String?

  userId String
  orgId  String

  user User         @relation(fields: [userId], references: [id])
  org  Organization @relation(fields: [orgId], references: [id])

  createdAt DateTime @default(now())

  @@map("audit_logs")
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String
  revoked   Boolean  @default(false)
  expiresAt DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}